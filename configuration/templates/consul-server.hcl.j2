# Standard Values
server = true
data_dir = "{{consul_data_dir}}"
log_level = "DEBUG"
ui = true
enable_syslog = true
acl_enforce_version_8 = true
ports {
  https = 8501
}

# Custom Values
datacenter = "dc1"
bootstrap_expect = 1
node_name = "{{inventory_hostname}}"
bind_addr = "0.0.0.0"
client_addr = "0.0.0.0"
encrypt = "{{consul_encrypt_key}}"
retry_join = ["127.0.0.1"]
addresses {
  https = "127.0.0.1"
}
